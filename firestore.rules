rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check if a user is an admin.
    // It checks for a custom claim 'admin' on the user's auth token.
    // This claim needs to be set, for example, through a Cloud Function when a user signs up.
    function isAdmin() {
      return request.auth.token.admin == true;
    }

    // Helper function to check if the user is authenticated.
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Admins can manage all user documents
    match /users/{userId} {
      allow read, write: if isAdmin();
      // A user can read their own document
      allow read: if isAuthenticated() && request.auth.uid == userId;
    }

    // Admins can read, write, and delete exams.
    // Authenticated candidates can read exams if they have an invitation.
    match /exams/{examId} {
      allow read, write, delete: if isAdmin();
      allow read: if isAuthenticated() && exists(/databases/$(database)/documents/invitations/$(request.auth.token.email + '_' + examId));
    }

    // Admins can manage all invitations.
    // Candidates can read their own invitations.
    match /invitations/{invitationId} {
      allow read, write, delete: if isAdmin();
      allow read: if isAuthenticated() && invitationId == request.auth.token.email + '_' + resource.data.examId;
    }

    // Admins can read all results.
    // Candidates can create their own results and read them.
    match /results/{resultId} {
      allow read, delete: if isAdmin();
      allow create: if isAuthenticated();
      allow read: if isAuthenticated() && request.auth.uid == resource.data.candidateId;
    }
  }
}